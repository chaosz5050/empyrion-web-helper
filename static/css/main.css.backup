/* LOGGING PANEL STYLES */
.log-stats-panel {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.log-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 15px;
}

.stat-card {
    background-color: var(--bg-primary);
    padding: 15px;
    border-radius: 6px;
    border: 1px solid var(--border-color);
    text-align: center;
}

.stat-label {
    color: var(--text-secondary);
    font-size: 0.9em;
    margin-bottom: 5px;
}

.stat-value {
    color: var(--text-primary);
    font-size: 1.2em;
    font-weight: bold;
}

.log-actions-panel {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.log-action-row {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}

.log-settings-panel {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.settings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
    align-items: end;
}

.setting-item {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.setting-item label {
    color: var(--text-primary);
    font-weight: bold;
    font-size: 0.9em;
}

.setting-input {
    padding: 8px;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    font-size: 14px;
}

.setting-input:focus {
    outline: none;
    border-color: var(--accent-blue);
}

.recent-logs-panel {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.logs-controls {
    display: flex;
    gap: 10px;
    align-items: center;
    flex-wrap: wrap;
}

.log-lines-select {
    padding: 8px;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    background-color: var(--bg-secondary);
    color: var(--text-primary);
}

.logs-container {
    background-color: var(--bg-primary);
    border-radius: 6px;
    overflow: hidden;
    border: 1px solid var(--border-color);
}

.logs-content {
    background-color: var(--bg-primary);
    color: var(--text-primary);
    padding: 15px;
    margin: 0;
    font-family: 'Courier New', monospace;
    font-size: 12px;
    white-space: pre-wrap;
    word-wrap: break-word;
    max-height: 400px;
    overflow-y: auto;
    line-height: 1.4;
}

.logs-content::-webkit-scrollbar {
    width: 8px;
}

.logs-content::-webkit-scrollbar-track {
    background: var(--bg-secondary);
}

.logs-content::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: 4px;
}

.logs-content::-webkit-scrollbar-thumb:hover {
    background: var(--accent-blue);
}

/* Geolocation admin panel styles */
.geo-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 15px;
    margin-bottom: 20px;
}

.geo-actions-panel {
    margin-bottom: 20px;
}

.geo-help {
    margin-top: 10px;
    color: var(--text-secondary);
    font-size: 0.8em;
    line-height: 1.4;
}

.geo-country-breakdown {
    background-color: var(--bg-primary);
    padding: 15px;
    border-radius: 6px;
    border: 1px solid var(--border-color);
}

.geo-country-breakdown h4 {
    color: var(--accent-blue);
    margin-bottom: 10px;
    font-size: 1em;
}

.country-list {
    max-height: 300px;
    overflow-y: auto;
}

.country-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
    border-bottom: 1px solid var(--border-color);
}

.country-item:last-child {
    border-bottom: none;
}

.country-name {
    color: var(--text-primary);
    font-weight: bold;
}

.country-count {
    color: var(--text-secondary);
    font-size: 0.9em;
}

